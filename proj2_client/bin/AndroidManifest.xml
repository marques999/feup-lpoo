<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lpoo.proj2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

	<android:uses-permission android:maxSdkVersion="21" android:name="android.permission.READ_PHONE_STATE"/>
	<android:uses-permission android:maxSdkVersion="21" android:name="android.permission.INTERNET"/>
	<android:uses-permission android:maxSdkVersion="21" android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<android:uses-permission android:maxSdkVersion="21" android:name="android.permission.ACCESS_WIFI_STATE"/>
	<android:uses-permission android:maxSdkVersion="21" android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Game"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.GAME" />
            </intent-filter>
        </activity>
    </application>
</manifest>